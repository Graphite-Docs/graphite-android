<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/docs_list_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/docs_list_title"
        android:layout_toRightOf="@id/docs_list_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:text="My Resume 2018"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:focusable="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxEms="9"/>

    <TextView
        android:id="@+id/created_date"
        android:layout_toRightOf="@id/docs_list_checkbox"
        android:layout_below="@id/docs_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="March 25, 2015"
        android:paddingLeft="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxEms="10"/>

    <TextView
        android:id="@+id/docs_list_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work, Job search, Daniel, something, else"
        android:maxWidth="100dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>


</RelativeLayout>